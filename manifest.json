{
  "manifest_version": 2,
  "name": "Stream Extractor",
  "version": "1.0.0",
  "description": "Find and copy streaming links from any website with one click",

  "permissions": [
    "activeTab",
    "notifications",
    "clipboardWrite"
  ],

  "data_collection_permissions": {
    "uses_data": false
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Extract Stream Links",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    "icons/*"
  ]
}
